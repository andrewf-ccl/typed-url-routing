@using Dysphoria.Net.UrlRouting.Example
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Monsters! @ViewBag.Title</title>
		<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	</head>
	<body>
		<header>
			<h1>@Html.Link("Monsters!", SiteUrls.Home)</h1>
			@if (!(ViewBag.SuppressHeaderSearch ?? false))
			{
				using (Html.BeginForm(SiteUrls.AdvancedSearch[null, null], FormMethod.Get))
				 {
					 <input type="search" name="q" />
					 <input type="submit" value="Search" />
				 }
			}
		</header>
		@RenderBody()
	</body>
</html>
